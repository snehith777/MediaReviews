@page
@model AddReviewModel
@{
    ViewData["Title"] = "Add Review";
}

<h2>Add a Review</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Review.Title"></label>
        <input asp-for="Review.Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Review.Category"></label>
        <select asp-for="Review.Category" class="form-control" required>
            <option value="">Select a category</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Review.ReviewText"></label>
        <textarea asp-for="Review.ReviewText" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Review.Rating"></label>
        <input asp-for="Review.Rating" type="number" min="1" max="5" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Review.DateReviewed"></label>
        <input asp-for="Review.DateReviewed" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit Review</button>
    
    <a asp-page="/ViewReviews" class="btn btn-secondary">Cancel</a>
</form>

